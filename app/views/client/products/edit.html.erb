<h2>Edit Product:</h2>

<%= form_tag "/client/products/#{@product['id']}", method: :patch do %>
  <div>
    Name: <input type="text" name="name" value="<%= @product['name'] %>" />
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product['price'] %>" />
  </div>
  <div>
    Desription: <input type="text" name="description" value="<%= @product['description'] %>" />
  </div>
  <div>
    Supplier Id: <input type="number" name="supplier_id" value="<%= @product["supplier"]["id"] %>" />
  </div>
  <input type="submit" name="" value="Update Product" />
<% end %>